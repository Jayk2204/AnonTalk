<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_poll_option">

    <!-- OPTION TEXT -->
    <TextView
        android:id="@+id/tvOptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option text"
        android:textSize="14.5sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="6dp"/>

    <!-- PROGRESS -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:progress="0"
        android:max="100"
        android:progressDrawable="@drawable/bg_poll_progress"
        android:indeterminate="false"/>

    <!-- META -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tvVotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 votes"
            android:textSize="12sp"
            android:textColor="#9CA3AF"/>

        <TextView
            android:id="@+id/tvPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="12sp"
            android:textColor="#9CA3AF"/>
    </LinearLayout>

    <!-- SELECTED -->
    <TextView
        android:id="@+id/tvSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ“ Your choice"
        android:textSize="12sp"
        android:textColor="#22C55E"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

</LinearLayout>
