<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ” HEADER -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Poll"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- ðŸ“ QUESTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#111111"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poll Question"
                android:textSize="13sp"
                android:textColor="#888888"/>

            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask something anonymouslyâ€¦"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:paddingVertical="10dp"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:maxLines="3"/>
        </LinearLayout>

        <!-- ðŸ“‹ OPTIONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#111111"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Options"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginBottom="10dp"/>

            <!-- Dynamic Options -->
            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- âž• ADD OPTION -->
            <TextView
                android:id="@+id/btnAddOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add option"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1DA1F2"
                android:layout_marginTop="14dp"/>
        </LinearLayout>

        <!-- â° INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="#0D1B2A"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â³"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This poll will automatically close after 24 hours."
                android:textSize="12sp"
                android:textColor="#9CA3AF"/>
        </LinearLayout>

        <!-- ðŸš€ CREATE BUTTON -->
        <Button
            android:id="@+id/btnCreatePoll"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Create Poll"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_post_button"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
