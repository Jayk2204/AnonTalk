<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ” HEADER -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Poll"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ“ QUESTION CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poll Question"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#374151" />

            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask something anonymously..."
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:maxLines="3" />
        </LinearLayout>

        <!-- ðŸ“‹ OPTIONS CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Options"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <!-- Dynamic Options Container -->
            <LinearLayout
                android:id="@+id/optionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- âž• ADD OPTION BUTTON -->
            <Button
                android:id="@+id/btnAddOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add Option"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="#2563EB"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- â° EXPIRY INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/info_bg"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â³"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This poll will automatically close after 24 hours."
                android:textSize="13sp"
                android:textColor="#374151" />
        </LinearLayout>

        <!-- ðŸš€ CREATE POLL BUTTON -->
        <Button
            android:id="@+id/btnCreatePoll"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Create Poll"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_primary"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
