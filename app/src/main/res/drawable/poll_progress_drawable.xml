<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#1F2933"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#1DA1F2"/>
                <corners android:radius="8dp"/>
            </shape>
        </clip>
    </item>

</layer-list>
