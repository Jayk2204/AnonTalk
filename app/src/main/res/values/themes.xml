<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AnonTalk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryNeon</item>
        <item name="colorSecondary">@color/accentPink</item>
        <item name="android:windowBackground">@color/bgDark</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <!-- SPLASH THEME -->
    <style name="Theme.AnonTalk.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/bg_splash_gradient</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.AnonTalk</item>
    </style>

</resources>
